<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="mx.iteso.ms.codigobarras.MainActivity"
    android:background="@drawable/bg_pos">

    <TextView
        android:id="@+id/login_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="123dp"
        android:text="@string/login_auth" />

    <TextView
        android:id="@+id/lab_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:text="@string/str_login_username"
        android:layout_alignBaseline="@+id/txt_login_username"
        android:layout_alignBottom="@+id/txt_login_username"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/txt_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/login_authentication"
        android:layout_toEndOf="@+id/lab_login_username" />

    <TextView
        android:id="@+id/lab_login_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_login_pass"
        android:layout_alignBaseline="@+id/txt_login_pass"
        android:layout_alignBottom="@+id/txt_login_pass"
        android:layout_toStartOf="@+id/txt_login_username" />

    <EditText
        android:id="@+id/txt_login_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/txt_login_username"
        android:layout_alignStart="@+id/txt_login_username"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lab_btn_login"
        android:onClick="auth"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txt_login_pass"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lab_btn_register"
        android:layout_alignBaseline="@+id/btn_login"
        android:layout_alignBottom="@+id/btn_login"
        android:layout_toEndOf="@+id/btn_login"
        android:onClick="register"/>
</RelativeLayout>
